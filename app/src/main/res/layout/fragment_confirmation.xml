<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitEnd"
        android:src="@drawable/cloud_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.8" />

    <LinearLayout
        android:id="@+id/confirmContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:gravity="center"
            android:text="Подтверждение\nрегистрации"
            android:textAppearance="@style/TextHeaderType1"
            android:textColor="@color/main_blue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="64dp"
            android:gravity="center"
            android:text="Приложение для отслеживания прогресса выполнения заданий по учебе."
            android:textAppearance="@style/TextBody.Type4"
            android:textColor="@color/secondary_text" />

        <com.poovam.pinedittextfield.SquarePinField
            android:id="@+id/pinField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="number"
            android:textAppearance="@style/TextHeaderType1"
            android:textColor="@color/main_blue"
            app:cornerRadius="8dp"
            app:fieldBgColor="@color/white"
            app:highlightColor="@color/grey"
            app:highlightType="allFields"
            app:noOfFields="4" />

        <Button
            android:id="@+id/buttonConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/selector_button"
            android:paddingHorizontal="57dp"
            android:paddingVertical="12dp"
            android:text="Подтвердить"
            android:textAppearance="@style/TextBody.Button" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>