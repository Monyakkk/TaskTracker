<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextBody">
        <item name="android:textColor">@color/main_text</item>
        <item name="font">@font/muller_regular</item>
    </style>

    <style name="TextBody.Button">
        <item name="android:textSize">16dp</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextBody.Type1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBody.Type2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody.Type3">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBody.Type4">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextHeaderType1">
        <item name="fontFamily">@font/muller_bold</item>
        <item name="android:fontFamily">@font/muller_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextHeaderType1.Blue24">
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextHeaderType2">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/muller_medium</item>
        <item name="android:fontFamily">@font/muller_medium</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>